@model NTT.Registro_Model 
@{
    ViewBag.Title = "Actualizarinformacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    ViewBag.Title = "Actualizar Informacion";
}

 
<head>
    <title>@ViewBag.Title</title>

</head>

<style>
    body {
        background-color: rgba(220, 217, 217, 0.52);
    }

    }

    #si {
        color: #2DB216;
    }

    #si1 {
        color: #D9381C;
    }

    h5 {
        color: #0F0F0F;
    }

    a {
        color: #0F0F0F;
    }

    h6 {
        color: #0F0F0F;
    }

    #pi {
        color: black;
    }

    #tis {
        color: #EFE3E3;
    }

    p, i, a, #inn {
        color: #2A2826;
    }

    #ss, #tis {
        color: #2A2826;
    }
</style>
<!-- End Navbar -->

<div class="content-center">
    <div class="container">
        <div class="col-md content-center">
            <div class="card card-login card-plain">
                <div class="form" action="#">
@using (Html.BeginForm("Actualizarinformacion", "ClienteLogeado", FormMethod.Post))
{
                    <!  --CLIENTE-->
                    <br /><br /><div style="margin-left: 300px;">
                        <div class="container-fluid">
                            <div id="usuario">
                                <div style="margin-left:120px;">
                                    <h4>MI INFORMACIÓN</h4>
                                </div>

                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">

                                            <h6>PRIMER NOMBRE</h6>
                                            <div class="input-group form-group-no-border input-lg">
                                                @Html.TextBoxFor(mod => mod.primernombre, new { @type = "text", @Value =@ViewBag.nombre1 })


                                             </div>
                                            <h6>PRIMER APELLIDO</h6>
                                            <div class="input-group form-group-no-border input-lg">
                                                @Html.TextBoxFor(mod => mod.primerapellido, new { @type = "text", @Value = @ViewBag.apellido1 })
   </div>

                                            <h6>IDENTIFICACIÓN</h6>
                                            @Html.TextBoxFor(mod => mod.idcliente, new { @type = "text", @Value = @ViewBag.id})

                                              <br /><br />                                                
                                            <h6>TELEFONO</h6>
                                            @Html.TextBoxFor(mod => mod.telefono, new { @type = "text", @Value = @ViewBag.telefono })

                                        </div>

                                    </div>
                                    <div class="col-md-4">

                                        <div class="form-group">
                                            <h6>SEGUNDO NOMBRE</h6>
                                            <div class="input-group form-group-no-border input-lg">
                                                @Html.TextBoxFor(mod => mod.segundonombre, new { @type = "text", @Value = @ViewBag.nombre2 })
                                                 
                                            </div>
                                            <h6>SEGUNDO APELLIDO</h6>
                                            <div class="input-group form-group-no-border input-lg">
                                                @Html.TextBoxFor(mod => mod.segundoapellido, new { @type = "text", @Value = @ViewBag.apellido2 })
                                                 
                                            </div>

                                            <h6>EMAIL</h6>
                                            <div class="input-group form-group-no-border input-lg">
                                                @Html.TextBoxFor(mod => mod.email, new { @type = "text", @Value = @ViewBag.email })
                                                 
                                            </div>
                                            <h6>USUARIO</h6>

                                            <div class="input-group form-group-no-border input-lg">
                                                @Html.TextBoxFor(mod => mod.userc, new { @type = "text", @Value = @ViewBag.user })
                                                 
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-xl-8" style="margin-left: 150px;">
                                        <div>

                                            <input type="submit" value="Actualizar informacion" title="Actualizar información" class="btn btn-primary btn-round" onclick="EventoAlert()" />
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>


                    </div>
}
                </div>

            </div>
        </div>

    </div>

</div><br /><br /><br /><br /><br /><br />

 
