 @model NTT.Registro_Model

@{
    ViewBag.Title = "Registro  - "+ViewBag.NombrePrincipal;
}

<head>
    <title>@ViewBag.Title</title>

</head>
<script> 
     

function esconde_div(){
   var elemento = document.getElementById("usuario");
   elemento.style.display = 'block';
elemento =document.getElementById("empresa");
elemento.style.display = 'none';
elemento = document.getElementById("boton");
elemento.style.display = 'block';


}

function visible_div(){
   var elemento = document.getElementById("empresa");
   elemento.style.display = 'block';
   elemento =document.getElementById("usuario");
   elemento.style.display = 'none';
   elemento = document.getElementById("boton");
   elemento.style.display = 'block';

}
</script>

@using (Html.BeginForm("Registro", "Registro", FormMethod.Post))
