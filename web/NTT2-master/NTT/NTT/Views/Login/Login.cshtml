@model NTT.Ingresar_Model

@{
    ViewBag.Title = "Ingresar - "+ViewBag.NombrePrincipal;
    Session["menu"] = Session["rol"];
 
}
<head>
    <title>@ViewBag.Title</title>

</head>

@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    <script src="~/Content/assets/js/custom.js"></script>
   
    <body class="login-page" onload="nobackbutton();">
 

        <!--contenido del login-->
        <div class="page-header">
            <div class="page-header-image" style="background-image:url(../../Content/assets/img/examples/card-blog6.jpg)"></div>
            <div class="content-center">
                <div class="container">
                    <div class="col-md-4 content-center">
                        <div class="card card-login card-plain">
                            <form class="form" action="#">
                                <div class="header header-primary text-center">
                                    <h4>INICIAR SESIÓN</h4>
                                </div>
                                <div class="card-content">
                                    @Html.AntiForgeryToken()
                                    <div class="input-group form-group-no-border input-lg">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <span class="input-group-addon">
                                            <i class="now-ui-icons users_circle-08"></i>
                                        </span>
                                        @Html.TextBoxFor(model => model.user, new { @class = "form-control", @placeholder = "Usuario", @type = "text" })
                                        

                                    </div>
                                    <div class="input-group form-group-no-border input-lg">
                                        <span class="input-group-addon">
                                            <i class="now-ui-icons objects_key-25"></i>
                                        </span>
                                        @Html.TextBoxFor(model => model.password, new { @class = "form-control", @placeholder = "Contraseña", @type = "password" })


                                    </div>
                                     <input type="submit" value="Ingresar" class="btn btn-primary btn-round btn-lg" />
                                    <h6>@ViewBag.Message</h6>

                                </div>
                                <div class="footer text-center">
                                     <!-- <a href= "" class="btn btn-primary btn-round btn-lg btn-block">Ingresar</a>-->
                                <div class="pull-left">
                                    <h6>
                                        <a href=@Url.Action("Registro","Registro") class="link footer-link">Crear nueva cuenta</a>
                                    </h6>
                                    <h6>
                                        <a href=@Url.Action("Registro","Registro") class="link footer-link">Ayuda</a>
                                    </h6>
                                </div>   
                                   </div>
                                                   
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </body>


}
